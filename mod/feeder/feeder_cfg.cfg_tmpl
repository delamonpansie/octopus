#######################################################################
# FEEDER
#
# feed WAL to remote replicas
# feeder accepts it's clients on wal_feeder_bind_addr, format "addr:port"
# for INADDR_ANY use wal_feeder_bind_port = port or wal_feeder_bind_addr = "0.0.0.0:port"

wal_feeder_bind_addr="", ro
wal_feeder_bind_port=0, ro

# it's advisable to fork before initialization of memory storage
wal_feeder_standalone=0, ro
wal_feeder_debug_no_fork=0, ro

wal_feeder_write_timeout=120, rw
